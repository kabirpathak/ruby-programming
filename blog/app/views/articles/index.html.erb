<div class = "card">
  <div class="card-header" >
    <div id = 'title'>
      <h1>Articles</h1>
    </div>
    Our blog has <%= Article.public_count %> articles and counting!
  </div>

  <ul>
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <div class="card-body" id="card_<%= article.id %>">
          <div class="card">
            <div class="card-header">
              <h4><%= link_to article.title, article %></h4>
            </div>
            <div class="card-body">
              <%= article.body %>
            </div>
            <div class="card-footer" float="left">
              <%= link_to 'Destroy', article, remote: true, method: :delete, data: { confirm: 'Are you sure?'}%>
              <p>Posted <%= time_ago_in_words(article.created_at) %> ago</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </ul>
</div>
</div>


<div id="new-article-placeholder">
    <%# if i don't add remote: true, it will take me to the article/new page%>
    <%# this allows us to use the new.js.erb file, which upon adding remote: true, will correspond to the new action of the article controller%>
    <%= link_to 'New Article(Async)', new_article_path,  remote: true %>
</div>