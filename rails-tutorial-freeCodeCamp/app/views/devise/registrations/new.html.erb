

<div class="card">
  <div class="card-header">
    <h4>Sign up</h4>
  </div>

  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group mt-2">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field form-group mt-2">
    <% f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "New Password" %>
  </div>

  <div class="field form-group mt-2">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm New Password"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-secondary mt-4" %>
  </div>

<%= render "devise/shared/links" %>
<% end %>
  </div>
</div>

